# =============================================================================
# Nivo - Local Development Environment Variables
# =============================================================================
#
# This file contains development-only credentials.
# Copy to .env for Docker Compose to auto-load:
#
#   cp .env.development .env
#
# For production, use .env.enc (encrypted with SOPS).
#
# =============================================================================

# Database
POSTGRES_USER=nivo
POSTGRES_PASSWORD=nivo_dev_password
POSTGRES_DB=nivo

# Redis
REDIS_PASSWORD=nivo_redis_dev

# Security
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars

# Environment
ENVIRONMENT=development

# Frontend
VITE_API_URL=http://localhost:8000

# Simulation
AUTO_START_SIMULATION=true

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
