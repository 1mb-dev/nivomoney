{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path aliases for @nivo/shared - pointing to source files */
    "baseUrl": ".",
    "paths": {
      "@nivo/shared": ["../shared/src"],
      "@nivo/shared/*": ["../shared/src/*"],
      "@nivo/shared/components": ["../shared/components"],
      "@nivo/shared/components/*": ["../shared/components/*"],
      "@nivo/shared/lib/utils": ["../shared/lib/utils"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "../shared/src", "../shared/components", "../shared/lib", "../shared/hooks"],
  "exclude": ["../shared/**/__tests__/**", "../shared/**/*.test.tsx", "../shared/**/*.test.ts"]
}
