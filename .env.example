# Nivo - Environment Configuration Template
# Copy this file to .env and update values as needed

# PostgreSQL Configuration
POSTGRES_USER=nivo
POSTGRES_PASSWORD=nivo_dev_password
POSTGRES_DB=nivo
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=nivo_redis_password
REDIS_PORT=6379

# NSQ Configuration
NSQLOOKUPD_TCP_PORT=4160
NSQLOOKUPD_HTTP_PORT=4161
NSQD_TCP_PORT=4150
NSQD_HTTP_PORT=4151
NSQADMIN_PORT=4171

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Service Ports
IDENTITY_PORT=8080
LEDGER_PORT=8081
RBAC_PORT=8082
WALLET_PORT=8083
TRANSACTION_PORT=8084
# RISK_SERVICE_PORT=8085 (to be implemented)
# NOTIFICATION_SERVICE_PORT=8086 (to be implemented)
# API_GATEWAY_PORT=8090 (to be implemented)

# JWT Configuration (Identity Service)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24

# India-Centric Configuration
TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR
COUNTRY_CODE=IN

# Environment
ENVIRONMENT=development

# Log Level
LOG_LEVEL=debug
